@{
    ViewData["Title"] = "Home Page";
}
@model Shelby_v2.Models.Mustang

<div class="container">
    <div class="jumbotron p-3 p-md-5 text-white rounded">
        <div class="col-md-12 px-0">
            <img class="w-100 img-fluid" style="max-height: 400px" src="/img/wallpaper_4.jpg" />
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-md-5">
            <div class="align-content-center flex-md-row mb-4 box-shadow" style="max-height: 400px">
                <div class="d-flex flex-column align-items-center">
                    <a class="btn btn-light" asp-action="Index" asp-controller="Mustang">
                        <strong id="p-model">
                            Toca para obtener tu mustang aleatorio
                        </strong>
                    </a>
                    <img id="historyImg" src="@if(Model!=null)
                    @Model.Img1


" style="max-height: 250px; visibility: hidden" class="h-75 img-thumbnail flex-auto">
                    <br />
                    <p id="p-engine">Escucha el motor</p>
                    <audio id="rndMustangSound" src="@if(Model!=null)
                    @Model.EngineSound


" controls preload="auto" class="w-50"></audio>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5">
            <div class="flex-md-row align-items-center d-flex" style="max-height: 400px">
                <div class="align-items-center">
                    <a href="../Views/Home/History.cshtml">
                        <strong>
                            Lee la historia aqui
                        </strong>
                    </a>
                    <img class="flex-auto img-thumbnail" style="max-height: 400px" src="/img/wallpaper_1 small.jpg">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-4" style="max-width:1100px; margin: auto">
    <div class="row">
        <div id="CarouselEjemplo" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="~/img/img1.jpg" alt="galeria de imagenes1">
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="~/img/img2.jpg" alt="galeria de imagenes2">
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="~/img/img3.jpg" alt="galeria de imagenes3">
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="~/img/img4.jpg" alt="galeria de imagenes4">
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="~/img/img5.jpg" alt="galeria de imagenes5">
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="~/img/img6.jpg" alt="galeria de imagenes6">
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="~/img/img7.jpg" alt="galeria de imagenes7">
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="~/img/img8.jpg" alt="galeria de imagenes8">
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="~/img/img9.jpg" alt="galeria de imagenes9">
                </div>
            </div>
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#CarouselEjemplo" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#CarouselEjemplo" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#CarouselEjemplo" data-bs-slide-to="2"></button>
                <button type="button" data-bs-target="#CarouselEjemplo" data-bs-slide-to="3"></button>
                <button type="button" data-bs-target="#CarouselEjemplo" data-bs-slide-to="4"></button>
                <button type="button" data-bs-target="#CarouselEjemplo" data-bs-slide-to="5"></button>
                <button type="button" data-bs-target="#CarouselEjemplo" data-bs-slide-to="6"></button>
                <button type="button" data-bs-target="#CarouselEjemplo" data-bs-slide-to="7"></button>
                <button type="button" data-bs-target="#CarouselEjemplo" data-bs-slide-to="8"></button>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#CarouselEjemplo" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#CarouselEjemplo" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
